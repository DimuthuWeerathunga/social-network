// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

model Users {
  id        BigInt      @id @default(autoincrement())
  name      String      @db.VarChar(255)
  email     String      @unique @db.VarChar(255)
  password  String      @db.VarChar(255)
  birthday  DateTime
  bio       String
  gender    Gender
  followers Followers[] @relation(name: "Followers")
  followees Followers[] @relation(name: "Followees")
}

model Followers {
  followee    Users  @relation(name: "Followees", fields: [followee_id], references: [id])
  followee_id BigInt
  follower    Users  @relation(name: "Followers", fields: [follower_id], references: [id])
  follower_id BigInt
  @@id([followee_id, follower_id])
}
